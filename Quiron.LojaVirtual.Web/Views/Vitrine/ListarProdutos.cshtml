@using Quiron.LojaVirtual.Web.HtmlHelpers
@model Quiron.LojaVirtual.Web.Models.ProdutoViewModel

@{
    ViewBag.Title = "Listar Produtos";
}

@foreach (var item in Model.Produtos)
{
    @Html.Partial("ProdutoDetalhes", item)
}
<div>@Html.PageLinks(Model.Paginacao, x => Url.Action("ListarProdutos", new { pagina = x, categoria = Model.Categoria }))</div>


